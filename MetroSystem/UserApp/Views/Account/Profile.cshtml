@using UsersApp.ViewModels
@model ProfileViewModel
@{
    ViewData["Title"] = "User Profile";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">User Profile</h3>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateProfile" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label">Full Name</label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Account Status</label>
                            <div class="card">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">
                                        <strong>Member Since:</strong> @Model.CreatedAt.ToString("MMMM dd, yyyy")
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Last Login:</strong> @(Model.LastLoginDate?.ToString("MMMM dd, yyyy HH:mm") ?? "N/A")
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Email Confirmed:</strong> @(Model.IsEmailConfirmed ? "Yes" : "No")
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Two-Factor Authentication:</strong> @(Model.TwoFactorEnabled ? "Enabled" : "Disabled")
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Login Count:</strong> @Model.LoginCount
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Update Profile</button>
                            <a asp-action="ChangePassword" asp-route-username="@Model.Email" class="btn btn-secondary">Change Password</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}